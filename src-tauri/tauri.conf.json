{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.freddy.spotifyvisualizer",
  "productName": "Spotify Visualizer",
  "version": "0.1.0",

  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "Spotify Visualizer",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": { "csp": null }
  },

  "bundle": {
    "active": true,
    "targets": "all"
  },

  "plugins": {
  "shell": { "open": true }
  }
}
